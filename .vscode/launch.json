    "version": "0.2.0",
    "configurations": [
        {
            "name": "show-standings",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "test",
                "show-standings"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "show-round",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "test",
                "show-round"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "revert-round",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "test",
                "revert-round"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "next-round",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "test",
                "next-round"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "stop-tournament",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/cli.py",
            "args": [
                "test",
                "stop-tournament"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
						"console": "integratedTerminal"
        },
        {
            "name": "Python: All debug Options",
            "type": "python",
            "request": "launch",
            "pythonPath": "${config:python.pythonPath}",
            "program": "${file}",
            "module": "module.name",
            "env": {
                "VAR1": "1",
                "VAR2": "2"
            },
            "envFile": "${workspaceFolder}/.env",
            "args": [
                "arg1",
                "arg2"
            ],
            "debugOptions": [
                "RedirectOutput"
            ]
        }
    ]
}
